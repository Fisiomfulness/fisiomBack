{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"]
    }
  },
  "include": ["src/**/*.js", "tests/**/*.js"],
  "exclude": ["node_modules"]
}
